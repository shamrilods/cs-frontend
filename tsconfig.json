{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
