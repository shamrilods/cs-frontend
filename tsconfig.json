{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "models/*": ["models/*"],
      "assets/*": ["assets/*"],
      "utils/*": ["utils/*"],
    }
  },

  "include": ["src/**/*", "custom.d.ts"],
  "exclude": ["node_modules"],
}
